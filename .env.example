# AFAA Project Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!

# Django Security
SECRET_KEY=your-super-secret-django-key-here-minimum-50-characters
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database (for production, use PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/afaa_db

# Email Configuration (Use App Passwords, not regular passwords!)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-character-app-password

# Google OAuth (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Security Headers (for production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Static Files (for production with CDN)
STATIC_URL=/static/
MEDIA_URL=/media/

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379/1

# Sentry Error Logging (optional)
SENTRY_DSN=your-sentry-dsn-here
